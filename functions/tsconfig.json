{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "lib",
    "sourceMap": true,

    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
